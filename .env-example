# =============================================================================
# Django Application Configuration
# =============================================================================

# Application name and identification
PROJECT_NAME=Sidewinder

# Django secret key - generate a secure key for production
# Command: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=secretkey

# Debug mode (0=production, 1=development)
DJANGO_DEBUG=1

# Django Debug Toolbar (0=disabled, 1=enabled)
DJANGO_DEBUG_TOOLBAR=1

# Allowed hosts - comma-separated list of hostnames
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# SSL/TLS configuration (0=http, 1=https)
DJANGO_SSL=0

# =============================================================================
# Email Configuration
# =============================================================================

# Server email address for system notifications
DJANGO_SERVER_EMAIL=sidewinder@example.com

# SMTP server configuration
DJANGO_EMAIL_HOST=127.0.0.1
DJANGO_EMAIL_PORT=1025
DJANGO_EMAIL_HOST_USER=
DJANGO_EMAIL_HOST_PASSWORD=

# Default from email address
DJANGO_DEFAULT_FROM_EMAIL=sidewinder@example.com

# Development SMTP mode (0=use configured SMTP, 1=use console backend)
SMTP_DEV=0

# Django-allauth email subject prefix
ALLAUTH_ACCOUNT_EMAIL_SUBJECT_PREFIX=

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite database (default - file-based, no external dependencies)
# Format: sqlite:///path/to/database.db
DJ_DATABASE_CONN_STRING=sqlite:///db.sqlite3

# PostgreSQL connection string (alternative - requires PostgreSQL server)
# Format: postgres://user:password@host:port/database_name
# DJ_DATABASE_CONN_STRING=postgres://postgres:postgres@localhost:5432/sidewinder

# =============================================================================
# Redis & Task Queue Configuration
# =============================================================================

# Redis connection URL for caching and task queue
REDIS_URL=redis://127.0.0.1:6379?db=1

# Huey task queue development mode (0=production with Redis, 1=development without Redis)
HUEY_DEV=1

# =============================================================================
# Security & Authentication
# =============================================================================

# Administrator email address for notifications
ADMIN_EMAIL=

# CORS settings - comma-separated list of allowed origins
# DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# CSRF trusted origins - for production deployment
# DJANGO_CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# PostHog analytics settings
POSTHOG_API_KEY=
POSTHOG_HOST=https://us.i.posthog.com

# =============================================================================
# Static Files & Media
# =============================================================================

# Static files root directory (if not using WhiteNoise)
# DJANGO_STATIC_ROOT=/var/www/static/

# Media files root directory
# DJANGO_MEDIA_ROOT=/var/www/media/

# =============================================================================
# Frontend Development
# =============================================================================

# Tailwind CSS watch mode (0=disabled, 1=enabled)
# TAILWIND_WATCH=0

# Frontend development server URL
# FRONTEND_DEV_SERVER=http://localhost:3000

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# DJANGO_LOG_LEVEL=INFO

# Log format (json, console, structured)
# DJANGO_LOG_FORMAT=console

# =============================================================================
# Optional Features
# =============================================================================

# Django Silk profiling (0=disabled, 1=enabled)
# DJANGO_SILK=0

# Django extensions shell (0=disabled, 1=enabled)
# DJANGO_EXTENSIONS=0
